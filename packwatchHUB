--// Initialize
local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/GreenDeno/Venyx-UI-Library/main/source.lua"))()
local UI = library.new("Packwatch Hub", 5013109572)
local toFarm

--// Themes
local themes = {
    Background = Color3.fromRGB(24, 24, 24),
    Glow = Color3.fromRGB(0, 0, 0),
    Accent = Color3.fromRGB(10, 10, 10),
    LightContrast = Color3.fromRGB(20, 20, 20),
    DarkContrast = Color3.fromRGB(14, 14, 14),  
    TextColor = Color3.fromRGB(255, 255, 255)
}

--// Pages
local page_AF = UI:addPage("Autofarm", 5012544693)
local page_AM = UI:addPage("Misc", 5012544693)
local page_DUPE = UI:addPage("Duping", 5012544693)
local theme = UI:addPage("Settings", 5012544693)

--// Sections
local colors = theme:addSection("Colors")

local af_s1 = page_AF:addSection("Mob Settings")
local af_s2 = page_AF:addSection("Trinket Settings")
local af_s3 = page_AF:addSection("Extras")

local am_s1 = page_AM:addSection("Anti Moderation")
local am_s2 = page_AM:addSection("Server Config")

local d_s1 = page_DUPE:addSection("Duping")

--// Autofarm Page
af_s1:addToggle("Mob Autofarm", nil, function(value)
end)

af_s1:addDropdown("Mob To Farm", {"GenericOni", "FrostyOni", "GenericSlayer", "Zenitsu"}, function(value)
    -- toFarm = workspace[value]
    print(toFarm)
end)

af_s1:addSlider("Autofarm Speed", 0, 50, 100, function(value)
end)

af_s2:addToggle("Trinket TP Farm", nil, function(value)
end)

af_s2:addButton("Trinket Value Calculator: ", nil, function(value)
end)

af_s3:addButton("Godmode", function(value)
end) 

af_s3:addToggle("Auto Hit", nil, function(value)
    local event = game:GetService('ReplicatedStorage').Remotes.Async
    
    while wait(.2) do
    if(value == true) then
        event:FireServer("Katana", "Server")
    elseif(value == false) then
        break end
    end
end)

af_s3:addToggle("Sun Ore Autofarm", nil, function(value)
end)

am_s1:addToggle("Disable Security Kick", nil, function(value)
end)
am_s1:addToggle("Auto Unban", nil, function(value)
end)
am_s1:addToggle("Hide Name", nil, function(value)
end)
am_s2:addButton("TP to Lowest Server", nil, function(value)
end)
am_s2:addButton("Void All", nil, function(value)
end)

d_s1:addButton("Dupe Ryo", nil, function(value)
end)
d_s1:addTextbox("Amount of Ryo", nil, function(value)
end)
d_s1:addButton("Dupe Item", nil, function(value)
end)
d_s1:addTextbox("Item Name", nil, function(value)
end)

--// Themes & Startup page
for theme, color in pairs(themes) do
        colors:addColorPicker(theme, color, function(color3)
        UI:setTheme(theme, color3)
    end)
end

UI:SelectPage(UI.pages[1], true)
